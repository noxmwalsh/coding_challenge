<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">Posts</h1>
    <% if user_signed_in? %>
      <%= link_to 'New Post', new_post_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    <% end %>
  </div>

  <div class="grid gap-6">
    <% @posts.each do |post| %>
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-semibold mb-2">
          <%= link_to post.title, post, class: 'text-blue-600 hover:text-blue-800' %>
        </h2>
        <p class="text-gray-600 mb-2"><%= post.description %></p>
        <div class="flex justify-between items-center">
          <p class="text-sm text-gray-500">By <%= post.author %></p>
          <p class="text-sm text-gray-500"><%= time_ago_in_words(post.created_at) %> ago</p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-8">
    <%= paginate @posts %>
  </div>
</div> 