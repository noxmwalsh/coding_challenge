<div class="container mt-5">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <article class="card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start mb-4">
            <div>
              <h1 class="card-title display-5 mb-3"><%= @post.title %></h1>
              <p class="lead text-muted mb-3"><%= @post.description %></p>
              <div class="d-flex align-items-center text-muted">
                <small>
                  <i class="bi bi-person"></i> <%= @post.author %>
                  <span class="mx-2">â€¢</span>
                  <i class="bi bi-clock"></i> <%= time_ago_in_words(@post.created_at) %> ago
                </small>
              </div>
            </div>
            <% if user_signed_in? && @post.user == current_user %>
              <div class="btn-group">
                <%= link_to 'Edit', edit_post_path(@post.slugged), class: 'btn btn-outline-secondary' %>
                <%= button_to 'Delete', @post, method: :delete, 
                    data: { confirm: 'Are you sure?' }, 
                    class: 'btn btn-outline-danger' %>
              </div>
            <% end %>
          </div>

          <div class="post-content">
            <%= simple_format(@post.body, class: 'card-text') %>
          </div>
        </div>
      </article>

      <div class="mt-4">
        <%= link_to 'Back to Posts', posts_path, class: 'btn btn-outline-secondary' %>
      </div>
    </div>
  </div>
</div> 